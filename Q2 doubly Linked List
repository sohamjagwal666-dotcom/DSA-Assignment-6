#include <iostream>
using namespace std;
class node{

    public:
    int data;
    node* next;
    node(int a){
        data=a;
        next=NULL;


    }


};

void insertHead(node *&head,int val){
    node *b=new node(val);
    if(head==NULL){
        head=b;
        b->next=head;  // self-loop
        return;
    }
    node *temp=head;
    while(temp->next!=head) temp=temp->next;
    temp->next=b;
    b->next=head;
    head=b;
}
void insertTail(node *&head,int val){
    if(head==NULL){
        insertHead(head,val);
    }

    else{
    node *b=new node(val);
    node *temp=head;

    while(temp->next!=head){
        temp=temp->next;
    }
    temp->next=b;
    b->next=head;
    

    }
}
void display(node*&head){
    if (head==NULL)cout<<"Linked list1 is empty"<<endl;
    else{
    node *temp=head;
    while(temp->next!=head){
        cout<<temp->data<<" ";
        temp=temp->next;
    }
    cout<<temp->data<<endl;
}
}
void insertafter(node *&head,int num,int val){
    if(head==NULL){
        cout<<"linked list is empty"<<endl;
        return;
    }
    else{
    
    node *temp=head;
    while(temp->next!=head&&temp->data!=num){
        temp=temp->next;
    }
    if(temp->next==head&&temp->data!=num){
        cout<<"no matching element as "<<num<<" to print after"<<endl;
    }
    else{
        node *b=new node(val);
    b->next=temp->next;
    temp->next=b;
    }
}
}
void deletion(node *&head,int val){
    if (head==NULL){
        cout<<"Linked list is empty"<<endl;
        return;

    }
    else if(head->data==val){
        node *temp=head;
        head=head->next;
        delete temp;
    }
    else{
        node *temp=head;
        while(temp->next!=head&&(temp->next)->data!=val){
          
            temp=temp->next;


        }
        if(temp->next==head){
            cout<<"No matching element as "<<val<<endl;
        }
        else{
        node *b=temp;
        temp=temp->next;
        b->next=temp->next;
        delete temp;

    }
}

}


int main(){
    node *head=NULL;
 
    insertafter(head,1,5);
       insertHead(head,1);
    insertHead(head,2);
    insertafter(head,1,3);

    display(head);
    deletion(head,3);
    display(head);
    


    
}
